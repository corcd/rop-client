{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["es5", "es6", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./esm",
    "strict": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "esModuleInterop": true,
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}